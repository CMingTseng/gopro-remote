<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.jbarr21.goproremote">

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:label="@string/app_name"
        android:name=".GoProRemoteApp"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.PagerActivity"
            android:label="@string/app_name"
            android:icon="@mipmap/ic_launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.ControlActivity"
            android:exported="true"
            android:allowEmbedded="true"
            android:taskAffinity=""/>

        <activity android:name=".activity.ModeActivity"
            android:exported="true"
            android:allowEmbedded="true"
            android:taskAffinity=""/>

        <activity android:name=".activity.ProgressActivity"/>
        <activity android:name="android.support.wearable.activity.ConfirmationActivity"
            android:theme="@style/AppTheme.Transparent"/>

        <activity
            android:name=".activity.LaunchActivity"
            android:label="@string/app_name"
            android:icon="@mipmap/ic_launcher">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->
                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <receiver android:name=".receiver.WearNotificationReceiver"/>

        <service android:name=".service.GoProCommandRequestService"/>
        <service android:name=".service.WearMessageListenerService">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>

    </application>

</manifest>
